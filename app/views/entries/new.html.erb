<h1>Add a New Entry for <%= @place.name %></h1>

<%= form_with model: [@place, @entry], local: true do |form| %>
  <div class="form-group">
    <%= form.label :title, class: 'control-label' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: 'control-label' %>
    <%= form.text_area :description, rows: 5, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :date, class: 'control-label' %>
    <%= form.date_field :date, class: 'form-control' %>
  </div>

  <%= form.hidden_field :place_id %>

  <%= form.submit 'Create Entry', class: 'btn btn-success' %>
<% end %>

<%= link_to 'Back to Place', place_path(@place), class: 'btn btn-link' %>

